<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.example.app.shopping.domain.mapper.WishListMapper">

    <insert id="insertWish">
        INSERT INTO `wishList` (`Pid`, `Uid`)
        VALUES (#{Pid}, #{Uid})
    </insert>

    <select id="findWishByPidAndUid"
            resultType="com.example.app.shopping.domain.dto.WishlistDto">
        SELECT *
        FROM `wishList`
        WHERE `Pid` = #{Pid} AND `Uid` = #{Uid}
    </select>

</mapper>